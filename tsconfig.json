{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "rootDir": "./src",
    /* O CAMINHO MAIS CURTO: SUPRESSÃO TOTAL */
    "strict": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "**/*.spec.ts",
    "src/@types" /* Excluímos daqui para o compilador não se confundir no build */
  ]
}