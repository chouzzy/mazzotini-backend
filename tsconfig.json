{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,               /* 1. DESATIVA o modo estrito para ignorar essas checagens */
    "noImplicitAny": false,        /* 2. Permite que ele não reclame de tipos não definidos */
    "strictNullChecks": false,     /* 3. Ignora reclamações de campos que podem ser nulos */
    "skipLibCheck": true,          /* 4. Ignora erros dentro da pasta node_modules */
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}